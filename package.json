{
  "name": "snack-attack",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n server,client -c blue,green \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx -r tsconfig-paths/register src/server/index.ts",
    "dev:client": "vite --config vite.config.ts",
    "build:client": "vite build --config vite.config.ts",
    "build:server": "vite build --config vite.server.config.ts",
    "start:server": "node -r tsconfig-paths/register dist/server/index.js",
    "start:client": "vite preview --config vite.config.ts",
    "typecheck": "tsc -p tsconfig.client.json --noEmit && tsc -p tsconfig.server.json --noEmit"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "lit": "^3.1.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/howler": "^2.2.11",
    "@types/node": "^20.11.5",
    "concurrently": "^9.2.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "vite": "^5.0.10",
    "vite-plugin-static-copy": "^3.1.5"
  }
}
